{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["es2024"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "worker-configuration.d.ts",
    "src/**/*.ts",
    "eslint.config.mjs",
    ".prettierrc.mjs"
  ]
}
